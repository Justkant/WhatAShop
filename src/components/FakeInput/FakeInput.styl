.form {
  margin-bottom: 20px;
  max-width: 80%;
}

.label {
  font-size: 12px;
  margin-bottom: 10px;
  color: #999;
}

.inputInline {
  display: flex;
  align-items: center;
  min-height: 32px;
  cursor: text;
  span {
    font-weight: 300;
    padding: 5px 40px 5px 0;
    border-bottom: 1px solid #ccc;
  }

  i {
    position: relative;
    left: -15px;
    font-size: 14px;
    color: #3585b5;
  }
}

.input {
  display: flex;
  min-height: 32px;
  input {
    flex-grow: 1;
    border-top-left-radius: 4px;
    border-bottom-left-radius: 4px;
    font-size: 16px;
    font-weight: 300;
    padding: 6px 12px;
    margin: 0;
    border: 1px solid #cbcbd2;
    background: white;
    box-shadow: inset 0 1px 2px rgba(203,203,210,0.4);

    &:focus {
      border-color: #3585b5;
      outline: 0;
    }
  }

  button[type="submit"] {
    cursor: pointer;
    font-size: 14px;
    background-color: #3585b5;
    color: white;
    border: 1px solid #3585b5;
    text-align: center;
    vertical-align: middle;
    padding: 6px 20px;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
  }

  .cancel {
    display: flex;
    align-items: center;
    cursor: pointer;
    margin-left: 10px;
    background: transparent;
    border: 0;
    color: #3585b5;
    font-size: 14px;

    &:hover {
      color: #2573a2;
    }
  }
}
