.form {
  width: 100%;
}

.inputGroup {
  margin-bottom: 20px;
  border-radius: 4px;
  background: white;
  width: 100%;
}

.inputBox {
  border-top: 1px solid #e3e3e3;
}

.inputBox:first-child {
  border-top: 0;
}

.inputBox input {
  width: 100%;
  padding: 11px 10px 11px 13px;
  display: block;
  margin: 0;
  border: 0;
  background: 0;
  font-size: 16px;
}

.inputBox input:focus {
  outline: 0;
}

.inputButton {
  height: 45px;
  font-size: 16px;
  width: 100%;
  background: #529ecc;
  color: white;
  text-align: center;
  border-radius: 4px;
  text-decoration: none;
  cursor: pointer;
  border: 0;
}

.inputButton:active {
  background: #3585b5;
}
