.main {
  overflow: auto;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #E7E7EC;
}

.tabContainer {
  height: 55px;
  display: flex;
  flex-grow: 1;
  align-items: stretch;
  justify-content: center;
  box-shadow: inset 0 -1px 0 #E7E7EC;
}

.tab {
  display: flex;
  align-items: center;
  margin-right: 30px;
  cursor: pointer;
}

.active {
  border-bottom: 1px solid #3585b5;
}

.tab i {
  color: #999;
}

.tab span {
  margin-left: 10px;
  font-weight: 300;
  color: #999;
}

.tab.active i {
  color: #3585b5;
}

.tab.active span {
  color: #3585b5;
}

.container {
  background-color: #f5f5f5;
  padding: 20px;
  display: flex;
  flex-direction: column;
  overflow: auto;
}

.element {
  background-color: white;
  border-radius: 4px;
  margin-bottom: 10px;
  box-shadow: 0 1px 2px rgba(0,0,0,.05),0 0 0 1px rgba(63,63,68,.1);
}

.element img {
  height: 40px;
  width: auto;
  border-radius: 50%;
}

.element span {
  margin-left: 10px;
  font-size: 16px;
  font-weight: 400;
}
