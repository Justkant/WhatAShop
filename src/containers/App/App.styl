html, body {
  font-family: Roboto,Arial,sans-serif;
  height: 100%;
  width: 100%;
  margin: 0;
  -webkit-font-smoothing: antialiased;
}

* {
  box-sizing: border-box;
}

header {
  padding-right: 5%;
  padding-left: 5%;
  height: 50px;
  position: fixed;
  z-index: 100;
  right: 0;
  left: 0;
  top: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.headerLogo {
  font-size: 1.5em;
  color: white;
  text-decoration: none;
  cursor: pointer;
}

.flexSpace {
  flex: 1 1 auto;
}
