@font-face {
  font-family: 'Roboto';
  font-style: normal;
  font-weight: 300;
  src: url(./Roboto-Light.ttf) format('truetype');
}

@font-face {
  font-family: 'Roboto';
  font-style: normal;
  font-weight: 400;
  src: url(./Roboto-Regular.ttf) format('truetype');
}

@font-face {
  font-family: 'Roboto';
  font-style: normal;
  font-weight: 500;
  src: url(./Roboto-Medium.ttf) format('truetype')
}

@font-face {
  font-family: 'Roboto';
  font-style: normal;
  font-weight: 700;
  src: url(./Roboto-Bold.ttf) format('truetype');
}

@font-face {
  font-family: 'Material Icons';
  font-style: normal;
  font-weight: 400;
  src: local('Material Icons'), local('MaterialIcons-Regular'), url(./MaterialIcons.ttf) format('truetype');
}

html, body {
  font-family: 'Roboto';
  height: 100%;
  width: 100%;
  margin: 0;
  display: flex;
  flex-grow: 1;
  color: #555;
}

body {
  background-image: linear-gradient(to bottom, #3585b5 0%,#115599 100%);
}

*, :after, :before {
  box-sizing: border-box;
}

.container {
  display: flex;
  flex-basis: 1440px;
  margin: 0 auto;
}

.main {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  background: white;
  box-shadow: 0 2px 4px rgba(0,0,0,.3);
}

:global {
  .flexSpace {
    flex-grow: 1;
  }

  .fullFlex {
    display: flex;
    flex-grow: 1;
  }

  .material-icons {
    font-family: 'Material Icons';
    font-weight: normal;
    font-style: normal;
    font-size: 24px;
    line-height: 1;
    letter-spacing: normal;
    text-transform: none;
    display: inline-block;
    white-space: nowrap;
    word-wrap: normal;
    direction: ltr;
    -webkit-font-feature-settings: 'liga';
    -webkit-font-smoothing: antialiased;
  }

  .material-icons.md-18 { font-size: 18px; }
  .material-icons.md-24 { font-size: 24px; }
  .material-icons.md-36 { font-size: 36px; }
  .material-icons.md-48 { font-size: 48px; }
}
