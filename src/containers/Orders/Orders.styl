.container {
  background-color: #f5f5f5;
  padding: 20px;
  display: flex;
  flex-direction: column;
  overflow: auto;
}

.element {
  background-color: white;
  border-radius: 4px;
  margin-bottom: 20px;
  box-shadow: 0 1px 2px rgba(0,0,0,.05),0 0 0 1px rgba(63,63,68,.1);
  flex-shrink: 0;

  img {
    height: 40px;
    width: auto;
    border-radius: 50%;
  }

  span {
    margin-left: 10px;
    font-size: 16px;
    font-weight: 400;
  }
}
