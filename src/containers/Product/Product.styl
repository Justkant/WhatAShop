.container {
  overflow: auto;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #E7E7EC;
}

.productContainer {
  padding: 20px;
  display: flex;
  overflow: auto;
}

.imgContainer {
  display: flex;
  flex-basis: 36.5%;

  img {
    padding: 20px;
    height: 100%;
    width: 100%;
  }
}

.mainInformations {
  display: flex;
  flex-direction: column;
  flex: 1;
  padding: 20px 0;

  .price {
    font-size: 16px;
    margin-bottom: 10px;
    color: #999;
  }

  .desc {
    font-size: 16px;
    margin-bottom: 10px;
    color: #999;
  }
}

.addContainer {
  padding: 20px 0;

  .addButton {
    display: flex;
    border: 0;
    border-radius: 4px;
    background: #3585b5;
    color: white;
    font-size: 14px;
    padding: 10px 20px;
    cursor: pointer;
    align-items: center;

    span {
      margin-left: 5px;
    }
  }
}
