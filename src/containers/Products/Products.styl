  display: flex;
  justify-content: flex-end;
}

.button {
  margin-left: 20px;
  border: 0;
  border-radius: 4px;
  background: #3585b5;
  color: white;
  font-size: 14px;
  padding: 10px 20px;
  cursor: pointer;

  &.red {
    background: #D64242;
  }
}

.element {
  display: flex;
  align-items: center;
  padding: 10px;
  background-color: white;
  border-radius: 4px;
  margin-bottom: 10px;
  box-shadow: 0 1px 2px rgba(0,0,0,.05),0 0 0 1px rgba(63,63,68,.1);
  cursor: pointer;

  img {
    height: 40px;
    width: auto;
  }

  h4 {
    margin-left: 10px;
    font-size: 16px;
    font-weight: 400;
  }
}
