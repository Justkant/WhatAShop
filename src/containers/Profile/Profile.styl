.main {
  box-shadow: inset 0 2px 0 rgba(0,0,0,.03),inset 0 -1px 0 rgba(0,0,0,.05);
  overflow: auto;
}

.profileHeader {
  width: 100%;
  min-height: 400px;
  background: #454545;
  display: flex;
  justify-content: center;
  align-items: center;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.profileImage {
  width: 100px;
  height: 100px;
  border-radius: 50%;
}

.profileName {
  color: white;
  font-weight: normal;
}

