.main {
  box-shadow: inset 0 2px 0 rgba(0,0,0,.03),inset 0 -1px 0 rgba(0,0,0,.05);
  overflow: auto;
  display: flex;
  flex-direction: column;
}


.tabContainer {
  flex: 1 0 55px;
  display: flex;
  align-items: stretch;
  justify-content: center;
  box-shadow: inset 0 -1px 0 #E7E7EC;
}

.tab {
  display: flex;
  align-items: center;
  margin-right: 30px;
  cursor: pointer;
  color: #999;
  border-bottom: 1px solid transparent;
}

.tab:not(.active):hover {
  color: #7D7D8E;
  border-bottom: 1px solid #7D7D8E;
}

.active {
  color: #3585b5;
  border-bottom: 1px solid #3585b5;
}

.tab span {
  margin-left: 10px;
  font-weight: 300;
}

.container {
  background-color: #f5f5f5;
  padding: 20px;
  display: flex;
  flex-direction: column;
  overflow: auto;
}

.element {
  background-color: white;
  border-radius: 4px;
  margin-bottom: 20px;
  box-shadow: 0 1px 2px rgba(0,0,0,.05),0 0 0 1px rgba(63,63,68,.1);
}

.element img {
  height: 40px;
  width: auto;
  border-radius: 50%;
}

.element span {
  margin-left: 10px;
  font-size: 16px;
  font-weight: 400;
}
