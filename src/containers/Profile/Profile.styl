.inputBlock {
  display: flex;
  flex-direction: column;
  padding: 20px 30px;
}

.inputBlock label {
  margin-bottom: 10px;
}

.inputBlock input {
  max-width: 50%;
  font-size: 16px;
  border-radius: 4px;
  border: 1px solid #ececec;
  padding: 5px 10px;
}

.inputBlock input:focus {
  outline: 0;
}

.saveButton {
  font-size: 18px;
  border: 1px solid #ececec;
  border-radius: 4px;
  padding: 5px 20px;
  background: #3585b5;
  color: white;
  margin: 20px 30px;
}
